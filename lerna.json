{
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "independent": true,
  "registry": "https://registry.npmjs.org/",
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/tests/**"],
      "allowBranch": "main"
    }
  }
}
